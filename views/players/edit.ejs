<!DOCTYPE html>
<html>
    <%- include('../partials/head') %> 
<body>
    <nav>
        <a href="/teams/<%=player.teamId%>">Back to Player Information</a>
    </nav>
    <h1>Edit Player Information</h1>
    <form class="form" action="/players/<%=player.id%>?_method=PUT" method="post">
            <input class="form" type="text" name="name" value="<%=player.name%>">
            <input class="form" type="number" name="number" value="<%=player.number%>">
            <input class="form" type="text" name="team" value="<%=player.team%>">
            <input class="form" type="number" name="touchdowns" value="<%=player.touchdowns%>">
            <input class="form" type="text" name="position" value="<%=player.position%>">
            <input class="form" type="hidden" name="teamId" value="<%=teamId%>">
            <input class="submit" type="submit" value="UPDATE">
</body>
</html>